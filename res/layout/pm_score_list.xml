<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.sxs.app.everydaypoem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg" >

    <com.sxs.app.common.BaseActionBar
        android:id="@+id/ab_pm_good_activity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:show_return_btn="true"
        app:title="考试成绩单" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ab_pm_good_activity"
        android:layout_margin="10dp"
        android:background="@drawable/book_corner_bg" >

        <ListView
            android:id="@+id/lv_pm_score_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:divider="#e8e8e8"
            android:dividerHeight="1dp"
            android:scrollbarStyle="outsideOverlay" />
    </RelativeLayout>

</RelativeLayout>