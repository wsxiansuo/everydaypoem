<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.sxs.app.everydaypoem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_actionbar_bg"
     >

	<com.sxs.app.common.BaseActionBar  
	    android:id="@+id/ab_pm_question_activity"
        android:layout_width="fill_parent"   
		android:layout_height="wrap_content"
		app:title="诗词大闯关"
		app:show_return_btn="true"/>
	<RelativeLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/book_corner_bg"
	    android:layout_below="@id/ab_pm_question_activity"
	   	android:layout_margin="10dp"
	    >
	    
	    <TextView android:id="@+id/tv_pm_question_title"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:background="@drawable/question_title_border"
	        android:textColor="@color/color_white"
	        android:gravity="center"
	        android:textSize="18sp"
	        android:text="闯关流程"/>
	    
        <ListView
  	    android:id="@+id/lv_pm_question_list"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/tv_pm_question_title"
	    android:divider="#e8e8e8"
		android:dividerHeight="1dp"
		android:layout_margin="5dp"
		android:scrollbarStyle="outsideOverlay"
	    /> 
	</RelativeLayout>
</RelativeLayout>
