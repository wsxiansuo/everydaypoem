<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingLeft="@dimen/gap_xlarge">
    <ImageView android:id="@+id/iv_icon_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>
    <TextView android:id="@+id/tv_icon_title_view"
        style="@style/text_large_title"
        android:layout_toRightOf="@id/iv_icon_view"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/gap_xlarge"/>
</RelativeLayout>
