<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" 
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:padding="2dp"
    android:orientation="horizontal"
    android:background="@drawable/list_item_selector"
    android:id="@+id/pm_good_list_myitem">
    <Button android:id="@+id/pm_good_list_num_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:background="@drawable/list_item_btn_bg"
        android:textSize="14sp"
        android:textColor="@color/color_list_title"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />
    <TextView android:id="@+id/pm_good_list_text"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:textSize="16sp"
        android:textColor="@color/color_list_title"
        android:gravity="center_vertical"
        />
    <TextView android:id="@+id/pm_good_list_count"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="12sp"
        android:textColor="@color/color_mid_gray"
        android:gravity="center_vertical|right"
        />
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/list_item_right"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

</LinearLayout>