<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.sxs.app.everydaypoem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_actionbar_bg"
     >

	<com.sxs.app.common.BaseActionBar  
	    android:id="@+id/ab_pm_search_activity"
        android:layout_width="fill_parent"   
		android:layout_height="wrap_content"
		app:title="诗词大搜索"
		app:show_return_btn="true"/>
	<RelativeLayout android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/book_corner_bg"
	    android:layout_below="@id/ab_pm_search_activity"
	   	android:layout_margin="10dp"
	    >
	    <SearchView android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:focusable="false"
        android:inputType="textFilter"
        android:queryHint="请输入关键字查询" 
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">
	    </SearchView>
        <ListView
  	    android:id="@+id/lv_pm_search_list"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:divider="#e8e8e8"
		android:dividerHeight="1dp"
		android:layout_marginLeft="5dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:layout_marginRight="30dp"
		android:layout_below="@id/search_view"
	    /> 
	    <com.sxs.app.common.ListTypeView
	        android:id="@+id/lt_pm_search_bar"
	        android:layout_width="30dp"
	    android:layout_height="fill_parent"
	    android:layout_below="@id/search_view"
	    android:layout_alignParentRight="true"
	    android:background="#ff0000"/>
	    
	    <TextView 
			android:id="@+id/tv_no_data"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="无数据"
	        android:textColor="@color/color_dark_gray"
	        android:textSize="30sp"
	        android:visibility="gone"/>
	</RelativeLayout>
</RelativeLayout>
